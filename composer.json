{
    "name": "perfumes-management-system/testing",
    "description": "Testing dependencies for Perfumes Management System",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "codeception/codeception": "^4.1",
        "codeception/module-webdriver": "^1.0",
        "codeception/module-db": "^1.0",
        "codeception/module-phpbrowser": "^1.0",
        "behat/behat": "^3.8",
        "behat/mink": "^1.8",
        "behat/mink-extension": "^2.3",
        "behat/mink-selenium2-driver": "^1.4",
        "phpstan/phpstan": "^1.0",
        "vimeo/psalm": "^4.0",
        "phpmd/phpmd": "^2.10",
        "squizlabs/php_codesniffer": "^3.6",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite Unit",
        "test-integration": "phpunit --testsuite Integration",
        "test-functional": "codecept run functional",
        "test-acceptance": "codecept run acceptance",
        "phpstan": "phpstan analyse",
        "psalm": "psalm",
        "phpmd": "phpmd includes text phpmd.xml",
        "phpcs": "phpcs --standard=PSR12 includes admin",
        "phpcbf": "phpcbf --standard=PSR12 includes admin"
    }
}



